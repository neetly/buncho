{
  "name": "@buncho/repo",
  "private": true,
  "workspaces": [
    "./packages/*",
    "./examples/*"
  ],
  "homepage": "https://github.com/neetly/buncho",
  "repository": {
    "type": "git",
    "url": "git@github.com:neetly/buncho.git"
  },
  "license": "MIT",
  "scripts": {
    "build": "yarn workspaces foreach --topological-dev run build",
    "clean": "yarn workspaces foreach --topological-dev run clean",
    "lint": "eslint --max-warnings 0 . && prettier --check .",
    "lint:fix": "eslint --max-warnings 0 --fix . && prettier --write .",
    "publish": "yarn workspaces foreach --no-private npm publish --tolerate-republish"
  },
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.4",
    "@neetly/babel-preset": "^0.3.0",
    "@neetly/eslint-config": "^0.5.0",
    "@neetly/tsconfig": "^0.3.0",
    "eslint": "^8.38.0",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4"
  },
  "packageManager": "yarn@4.0.0-rc.42"
}
