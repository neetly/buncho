{
  "name": "@buncho/repo",
  "private": true,
  "workspaces": [
    "./packages/*",
    "./examples/*"
  ],
  "homepage": "https://github.com/neetly/buncho",
  "repository": {
    "type": "git",
    "url": "git@github.com:neetly/buncho.git"
  },
  "license": "MIT",
  "scripts": {
    "build": "yarn workspaces foreach --verbose --topological-dev run build",
    "clean": "yarn workspaces foreach --verbose --topological-dev run clean",
    "lint": "eslint --max-warnings 0 . && prettier --check .",
    "lint:fix": "eslint --max-warnings 0 --fix . && prettier --write .",
    "publish": "yarn workspaces foreach --verbose --no-private npm publish --tolerate-republish"
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.19.3",
    "@neetly/babel-preset": "^0.2.1",
    "@neetly/eslint-config": "^0.1.2",
    "@neetly/tsconfig": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "eslint": "^8.25.0",
    "prettier": "^2.7.1",
    "typescript": "^4.8.4"
  },
  "packageManager": "yarn@4.0.0-rc.24"
}
